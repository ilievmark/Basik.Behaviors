<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:validations="clr-namespace:Basil.Behaviors.Validations;assembly=Basil.Behaviors"
             x:Class="BehaviorsSample.Views.ValidationPage">
    
    <ScrollView>
        
        <StackLayout Padding="10,10,10,0">
            
            <Label Text="Masked behavior demo (input some string)"/>
            <Entry>
                <Entry.Behaviors>
                    <validations:MaskBehavior Pattern="(XXX - XX -X X)" TargetCharacter="X" PropertyName="Text"/>
                </Entry.Behaviors>
            </Entry>
            
            <Label Text="Masked behavior with rules demo"/>
            <Entry>
                <Entry.Behaviors>
                    <validations:MaskBehavior Pattern="(XXX - XX -X X)" TargetCharacter="X" PropertyName="Text"/>
                </Entry.Behaviors>
            </Entry>
            
        </StackLayout>
        
    </ScrollView>
    
</ContentPage>