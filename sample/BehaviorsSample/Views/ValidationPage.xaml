<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:validations="clr-namespace:Basil.Behaviors.Validations;assembly=Basil.Behaviors"
             x:Class="BehaviorsSample.Views.ValidationPage">
    
    <ScrollView>
        
        <StackLayout Padding="10,10,10,0">
            
            <Label Text="Minimum eight characters, at least one letter and one number:"/>
            <Entry>
                <Entry.Behaviors>
                    <validations:RegexValidationBehavior Pattern="^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d]{8,}$" PropertyName="Text" Command="{Binding ValidatedCommand}"/>
                </Entry.Behaviors>
            </Entry>
            
            <Label Text="Email validator:"/>
            <Entry>
                <Entry.Behaviors>
                    <validations:EmailValidationBehavior PropertyName="Text" Command="{Binding EmailValidatedCommand}"/>
                </Entry.Behaviors>
            </Entry>
            
        </StackLayout>
        
    </ScrollView>
    
</ContentPage>