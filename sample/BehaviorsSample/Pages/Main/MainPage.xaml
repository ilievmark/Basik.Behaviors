<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BehaviorsSample.Pages.Main.MainPage">
    <ContentPage.Content>
        
        <ScrollView>

            <StackLayout>

                <Button Text="Go to event behaviors demo page"
                        HorizontalOptions="Center"
                        Command="{Binding GoToEventPage}"/>

                <Button Text="Go to validation behaviors demo page"
                        HorizontalOptions="Center"
                        Command="{Binding GoToValidationPage}"/>

                <Button Text="Go to mask behaviors demo page"
                        HorizontalOptions="Center"
                        Command="{Binding GoToMaskPage}"/>
                
            </StackLayout>

        </ScrollView>
        
    </ContentPage.Content>
</ContentPage>